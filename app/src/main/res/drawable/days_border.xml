<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado seleccionado (activo) -->
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/lightblue" /> <!-- Color cuando está activo -->
            <corners android:radius="10dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>

    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/lightblue" /> <!-- Color cuando está presionado -->
            <corners android:radius="10dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>

    <!-- Estado normal -->
    <item>
        <shape>
            <solid android:color="@color/dullblue" /> <!-- Color normal -->
            <corners android:radius="10dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
</selector>
