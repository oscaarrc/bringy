<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="#FFFFFF" />

    <!-- Rounded border -->
    <corners android:radius="16dp" />

    <!-- Border color -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- Inner margin so that the text does not touch the edges -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
