<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/client_border"
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/clientImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="Client icon"
        android:src="@drawable/client_icon_black" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/routeCustomerRoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ruta del Cliente"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/routeCustomerAlias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alias del Cliente"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- FrameLayout para alinear el saldo en la esquina inferior derecha -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom|end"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/balanceCircle"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/circle_green_icon" />

            <TextView
                android:id="@+id/routeCustomerBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saldo"
                android:textSize="14sp" />
        </LinearLayout>

    </FrameLayout>
</LinearLayout>
